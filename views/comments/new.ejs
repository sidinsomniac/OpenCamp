<% include ../partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%;margin: 20px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method='POST'>
                <div class="form-group">
                    <input type="text" placeholder="Enter Comment" name="comment[text]" class="form-control">
                </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-default btn-block">
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>