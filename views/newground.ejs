<% include partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align: center;">New Campground Form</h1>
        <div style="width: 30%;margin: 20px auto">
            <form action="/campgrounds" method='POST'>
                <div class="form-group">
                    <input type="text" placeholder="Enter Name" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Enter Image URL" name="image" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Enter Description" name="description" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary btn-default btn-block">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>