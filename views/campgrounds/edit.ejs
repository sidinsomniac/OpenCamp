<% include ../partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%;margin: 20px auto">
            <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method='POST'>
                <div class="form-group">
                    <input type="text" value="<%= campground.name %>" name="updatedCampground[name]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" name="updatedCampground[image]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.description %>" name="updatedCampground[description]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary btn-default btn-block">
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>