<% include ../partials/header.ejs %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>This is where the world meets camps</p>
            <p>
                <a class='btn btn-primary btn-lg' href="/campgrounds/newground">Add a new Campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex;flex-wrap: wrap">
        <% campgrounds.forEach(function(x){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= x.image %>">
                    <div class="caption">
                        <h4>
                            <%= x.name %>
                        </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= x._id %>" class="btn btn-primary">
                            More Info
                        </a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer.ejs %>